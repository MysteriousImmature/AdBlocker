{
  "manifest_version": 3,
  "name": "AdShield",
  "version": "1.2",
  "description": "Blocks ads on web pages and shows the number of blocked ads.",
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "AdShield@MysteriousImmature.Github.com",
      "strict_min_version": "91.0"
    }
  }
}
